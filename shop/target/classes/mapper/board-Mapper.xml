<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.board-Mapper">

<select id="getBoardList" resultType="board">
SELECT * FROM board order BY id DESC;
</select>

<insert id="boardwrite">
insert into board (id,category,title,content,region,choose,object,price,users,views,createtime,updatetime) 
values(#{id},null,#{title},#{content},null,null,null,null,null,#{views},now(),null);
</insert>

<select id="getBoardDetail" resultType="board">
SELECT * FROM board where id = #{id};
</select>

<!-- update -->
<update id="viewUpdate">
UPDATE board SET views = views+1 WHERE id = #{id}
</update>
</mapper>